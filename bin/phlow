#!/usr/bin/env ruby

require "phlow"

def print_usage
   puts <<USAGE

Phlow v#{Phlow::VERSION}, your cute little Git workflow..

   init <remote-repo>      = Initialize a new repository with the default setup for given remote repository
   clone <url>             = Clones a Phlow-ready repository
   branch <feature>        = Creates a new feature/bug branch with the given name
   sync                    = Syncs current branch with other users (pull & push)
   signoff <feature>       = Signs off to the given feature
   version                 = Displays the version information
   help                    = Displays this screen

USAGE

end

has_git = `which git`
if not $?.success?
   puts "Please install Git first to continue.."
   exit 1
end

if ARGV.first
   command, arg = ARGV.first, (ARGV.last unless ARGV.first == ARGV.last)
   header_message = "Phlow is thinking..."

   case command
      when "init"
         puts header_message
         Phlow::init_repository arg
      when "clone"
         puts header_message
         Phlow::clone_repository arg
      when "branch"
         puts header_message
         Phlow::branch arg
      when "sync"
         puts header_message
         Phlow::sync
      when "signoff"
         puts header_message
         Phlow::signoff
      when "version"
         puts "Phlow, v#{Phlow::VERSION}"
      else
         print_usage
   end
else
   print_usage
end
